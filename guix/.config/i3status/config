# (man "i3status(1)")

general {
        colors = true
        color_good = '#005e00'
        color_degraded = '#813e00'
        color_bad = '#a60000'
        interval = 1
}

# order += "read_file uptime"
order += "volume master"
# order += "volume mic"
# order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
# order += "cpu_temperature 0"
order += "disk /"
order += "load"
order += "memory"
order += "tztime msk"
order += "tztime lisboa"
order += "tztime local"

volume master {
        format = "♪ %volume"
        format_muted = "♪ MUTE"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
        separator_block_width = 40
}

volume mic {
        format = "MIC ♪: %volume"
        format_muted = "MIC ♪: muted"
        device = "default"
        mixer = "Capture"
        mixer_idx = 0
}

wireless _first_ {
        format_up = "%quality"
        format_down = ""
        separator_block_width = 40
}

ipv6 {
        format_up = "%ip"
        separator_block_width = 40
}

ethernet _first_ {
        format_up = "%speed"
        format_down = ""
        separator_block_width = 40
}

battery all {
        format = "⌁ %status %percentage %remaining"
        format_down = "No battery"
        status_chr = "↑"
        status_bat = "↓"
        status_unk = "?"
        status_full = ""
        path = "/sys/class/power_supply/BAT%d/uevent"
        threshold_type = "percentage"
        low_threshold = 20
        last_full_capacity = true
        integer_battery_capacity = true
        separator_block_width = 40
}

disk "/" {
        format = "%avail"
        separator_block_width = 40
}

load {
        format = "%1min"
        separator_block_width = 40
}

memory {
       format = "RAM %used"
       separator_block_width = 40
}

cpu_temperature 0 {
        format = "T: %degrees °C"
        path = "/sys/devices/platform/coretemp.0/temp1_input"
}

tztime local {
        format = "%a %d %b %R"
        separator_block_width = 40
}

tztime msk {
        format = "Москва %R"
        timezone = "Europe/Moscow"
        hide_if_equals_localtime = true
        separator_block_width = 40
}

tztime lisboa {
        format = "Lisboa %R"
        timezone = "Europe/Lisbon"
        hide_if_equals_localtime = true
        separator_block_width = 40
}

