# (man "sway(5)")

# Variables

set $mod Mod4

set $term emacsclient -c -e '(eshell)'

set $background #efedef
set $foreground #424242

# (man "dmenu(1)")
set $menu dmenu_path | dmenu -fn "Hack-16" -nb "$background" -nf "$foreground" -sb "$foreground" -sf "$background"| xargs swaymsg exec --

# Output
# (man "sway-output(5)")

# Wallpaper
output * bg ~/dotfiles/wallpaper.jpg fill

# Monitors
set $laptop eDP-1
bindswitch --reload lid:on output $laptop disable
bindswitch --reload lid:off output $laptop enable

output $laptop scale 1
output $laptop mode --custom 2560x1440

# Idle configuration

# Example configuration:
#
# exec swayidle -w \
#          timeout 300 'swaylock -f -c 000000' \
#          timeout 600 'swaymsg "output * dpms off"' \
#               resume 'swaymsg "output * dpms on"' \
#          before-sleep 'swaylock -f -c 000000'
#
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.

# Input configuration
# (man "sway-input(5)")

# visit base.lst file for more info
# sudo find / | grep base.lst

# general settings for a random laptop keyboard
input type:keyboard {
  xkb_layout us,ru
  xkb_variant altgr-intl,
  xkb_options ctrl:swapcaps,grp:win_space_toggle,grp_led:caps,lv3:ralt_switch_multikey
}

# Niz atom66
input 1155:20778:CATEX_TECH._66EC-S {
  xkb_layout us,ru
  xkb_variant altgr-intl,
  xkb_options grp:win_space_toggle,grp_led:caps,lv3:ralt_switch_multikey
}

input type:touchpad {
  dwt enabled                   # disable-while-typing
  tap enabled
  tap_button_map lrm            # left, right, middle; 1, 2, 3 fingers
  pointer_accel 0.7
}

# Habu mouse
input 5426:9:Tempest_Habu_Mouse {
  accel_profile adaptive
  pointer_accel 0
}

# hide cursor after 1000ms
seat * hide_cursor 1000

# Keybindings

# Start a terminal
bindsym $mod+Return exec $$term

# Kill focused window
bindsym --to-code $mod+0 kill

# Start your launcher
bindsym --to-code $mod+x exec $menu

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal

# Reload the configuration file
bindsym --to-code $mod+r reload

# Exit sway (logs you out of your Wayland session)
# bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

# Volume
bindsym XF86AudioRaiseVolume exec amixer -q sset Master 10%+
bindsym XF86AudioLowerVolume exec amixer -q sset Master 10%-
bindsym XF86AudioMute exec amixer -q sset Master toggle

mode "media" {
    # with arrow keys
    bindsym Up exec amixer -q sset Master 10%+
    bindsym Down exec amixer -q sset Master 10%-
    bindsym Shift+Up exec amixer -q sset Master 1%+
    bindsym Shift+Down exec amixer -q sset Master 1%-
    bindsym m exec amixer -q sset Master toggle

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Control+g mode "default"
}

bindsym --to-code $mod+m mode "media"

# Brightness
# bindsym XF86MonBrightnessDown exec sudo light set 100-
# bindsym XF86MonBrightnessUp exec sudo light set +100

bindsym XF86MonBrightnessDown exec emacsclient -e '(let ((inhibit-message t)) (eshell-command "sudo light -U 10"))'
bindsym XF86MonBrightnessUp exec emacsclient -e '(let ((inhibit-message t)) (eshell-command "sudo light -A 10"))'

# Lock
bindsym $mod+Escape exec swaylock -f -c 000000

mode "power" {
    bindsym p exec loginctl poweroff
    bindsym r exec loginctl reboot

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Control+g mode "default"
}

bindsym --to-code $mod+Shift+p mode "power"

# Screenshot
bindsym --to-code $mod+p exec grim "$HOME/Pictures/$(date +%F_%T).png"

# Moving around:

bindsym $mod+TAB focus next
bindsym $mod+Shift+TAB focus prev

# Workspaces

workspace_auto_back_and_forth yes
bindsym --to-code $mod+j workspace back_and_forth

# Switch to workspace
bindsym --to-code Control+i workspace GNU Emacs
bindsym --to-code $mod+w workspace Browser
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9

# Move focused container to workspace
bindsym --to-code Control+Shift+i move container to workspace GNU Emacs
bindsym --to-code $mod+Shift+w move container to workspace Browser
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9

# Layout stuff:

# You can "split" the current object of your focus with
# $mod+b or $mod+v, for horizontal and vertical splits
# respectively.
bindsym --to-code $mod+b splith
bindsym --to-code $mod+v splitv

# Switch the current container between different layout styles
# bindsym $mod+s layout stacking
# bindsym $mod+w layout tabbed
bindsym --to-code $mod+e layout toggle split

# Make the current focus fullscreen
bindsym --to-code $mod+f fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $mod+Shift+space floating toggle

# Swap focus between the tiling area and the floating area
bindsym $mod+space focus mode_toggle

# Move focus to the parent container
bindsym $mod+a focus parent

#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show
#
# Resizing containers:
#
mode "resize" {
    # with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Control+g mode "default"
}

bindsym --to-code $mod+Shift+r mode "resize"

# Status Bar
# (man "sway-bar(5)")

bar {
    position top
    font Hack 16
    status_command i3status     # visit ~/.config/i3status/config
    colors {
        statusline $foreground
        background $background
        inactive_workspace $foreground $background $foreground
        focused_workspace $foreground $foreground $background
    }
}

# Rules
assign [class="IceCat"] Browser
assign [class="Firefox"] Browser
assign [class="ownCloud"] 1

# default_border pixel 2
for_window [class="Emacs"] border none
# client.focused $foreground $background $foreground
# client.unfocused $foreground $background $foreground

# Startup
exec owncloud
workspace GNU Emacs output DP-1 eDP-1
exec emacs
